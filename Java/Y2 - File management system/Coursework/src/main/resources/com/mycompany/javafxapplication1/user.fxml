<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.UserController">
    <children>
        <GridPane alignment="CENTER" layoutY="124.0" prefHeight="126.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="User name" />
                <Label text="Existing password" GridPane.rowIndex="1" />
                <Label text="New password" GridPane.rowIndex="2" />
                <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteBtnHandler" text="Delete account" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
                <Button fx:id="backLoginBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#backLoginBtnHandler" text="Return to Login Page" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
                <TextField fx:id="usernameTextField" GridPane.columnIndex="1" />
                <PasswordField fx:id="existPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#UpdateBtnHandler" text="Update password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <Label layoutX="272.0" layoutY="94.0" text="Account Manager" />
    </children>
</AnchorPane>
